<div class='container'>
	<div class='row'>
		<%= render 'error_messages' %>
		<%= render 'users/info', user: @user, book: @book %>

 <div class='col-xs-9'>
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <tr>
    <th></th><th>Title</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to user_path(book.user) do %>
          <%= attachment_image_tag @user, :profile_image, fill:"40x40",  fallback: "no_image.jpg", size:"40x40" %>
    	<% end %>
    </td>
    <td><%= link_to book.title, book_path(book) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>
</div>
</div>
</div>
</div>