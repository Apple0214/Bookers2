<div class='body'>
  <div class='container'>
    <div class='row'>
<div class='col-xs-3'>
  <%= render 'users/info', user: @user, book: @book %>
</div>
<div class='col-xs-9'>
  <h2>Users</h2>
  <table class="table table-hover table-inverse">
    <tr>
    <th>image</th><th>name</th><th></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= attachment_image_tag @user, :profile_image, fill:"40x40",  fallback: "no_image.jpg", size:"40x40" %></td>

    <td><%= user.profile_image %></td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path(user) %></td>
  </tr>
  <% end %>
  </table>
</div>
</div>
</div>
</body>
